.row
  .col-md-6
    %form{ method: 'post', action: '/sites', role: 'form' }
      .form-group
        %input.form-control{ name: 'site[title]', type: :text, placeholder: 'Title' }
      .form-group
        %input.form-control{ name: 'site[url]', type: :text, placeholder: 'URL' }
      .form-group
        %input.form-control{ type: 'submit', value: 'Save' }
  .col-md-6
    %h4 Pages saved:
    %ul
      - Site.all.each do |site|
        %li
          %a{ href: site.url, target: '_blank' }= site.title
          Last changed: #{site.updated_at}
